@article{oeyMachineLearningCan2020,
  title = {Machine Learning Can Predict Setting Behavior and Strength Evolution of Hydrating Cement Systems},
  author = {Oey, Tandr{\'e} and Jones, Scott and Bullard, Jeffrey W. and Sant, Gaurav},
